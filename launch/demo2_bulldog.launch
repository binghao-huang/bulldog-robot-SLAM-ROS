<launch>

    <!-- 设置地图的配置文件 -->
    <arg name="map" default="demo2.yaml" />

    <!-- 运行地图服务器，并且加载设置的地图-->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find bulldog_navigation)/map/$(arg map)"/>

    <!-- 运行move_base节点 -->
    <include file="$(find bulldog_navigation)/launch/move_base.launch"/>

    <!-- 启动AMCL节点 -->
    <include file="$(find bulldog_navigation)/launch/amcl.launch" />
